<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GoalText"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:text="Дата выполнения: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DateCompleText"
        android:textSize="22dp"
        android:layout_marginTop="97dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        />
    <TextView
        android:text="Осталось дней: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HowMuchDaysRemain"
        android:textSize="22dp"
        android:layout_marginTop="95dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="55dp"
        android:paddingLeft="20dp"
        />
    <TextView
        android:text="date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DateTextInput"
        android:textSize="22dp"
        android:layout_marginTop="45dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="53dp"
        android:paddingLeft="220dp"
        />
    <TextView
        android:text="Сложность цели: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DateText"
        android:textSize="22dp"
        android:layout_marginTop="199dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        />
    <TextView
        android:text="difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DifficultTextInput"
        android:textSize="22dp"
        android:layout_marginTop="145dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="55dp"
        android:textStyle="bold"
        android:paddingLeft="220dp"
            />
    <TextView
        android:text="days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/HowMuchDaysRemain2"
        android:textSize="22dp"
        android:layout_marginTop="95dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingTop="55dp"
        android:paddingLeft="222dp"
        android:textStyle="bold"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/Choose"
        android:id="@+id/appCompatCheckBox1"
        android:layout_marginTop="270dp"/>
    <TextView
        android:text="отметить выполнение\n(1 день)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Choose"
        android:textSize="22dp"
        android:layout_marginTop="265dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"/>
    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/Choose"
        android:id="@+id/appCompatCheckBox2"
        android:layout_marginTop="350dp"/>
    <TextView
        android:text="отметить выполнение\nкол-ва дней:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Choose2"
        android:textSize="22dp"
        android:layout_marginTop="345dp"
        android:gravity="left"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:paddingLeft="40dp"/>
    <EditText
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/ChooseDays"
        android:inputType="numberSigned"
        android:layout_marginTop="358dp"
        android:layout_marginLeft="240dp"
        android:lines="1"
        android:maxLength="8"/>
    <Button
        android:id="@+id/buttonContinueGoal"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="Продолжить"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="@color/material_grey_300"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "420dp"
        />
    <Button
        android:id="@+id/DelGoalButton1"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="Удалить цель"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="@android:color/holo_red_light"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "490dp"></Button>
</RelativeLayout>