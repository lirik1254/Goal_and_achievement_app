<?xml version="1.0" encoding="utf-8" ?> 
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:text="goal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GoalText1"
        android:layout_centerHorizontal="true"
        android:textSize="35dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimaryDark"
        />
    <TextView
        android:text="Дата выполнения: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DateCompleText1"
        android:textSize="22dp"
        android:layout_marginTop="160dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        />
    <TextView
        android:text="Цель выполнена!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goalIsComplete"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:background="@color/holo_green_dark"
        />
    <TextView
        android:text="Сложность цели: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/points"
        android:textSize="22dp"
        android:layout_marginTop="210dp"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="20dp"
        />
    <TextView
        android:text="date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DateTextInput1"
        android:textSize="22dp"
        android:layout_marginTop="160dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:paddingLeft="220dp"
        />
    <TextView
        android:text="difficult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DifficultTextInput1"
        android:textSize="22dp"
        android:layout_marginTop="210dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:paddingLeft="220dp"
            />
    <Button
        android:id="@+id/buttonContinueGoal1"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="Продолжить"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="@color/material_grey_300"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "270dp"></Button>
    <Button
        android:id="@+id/DelGoalButton"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:text="Удалить цель"
        android:textColor="@android:color/background_dark"
        android:backgroundTint="@android:color/holo_red_light"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop = "450dp"></Button>
</RelativeLayout>